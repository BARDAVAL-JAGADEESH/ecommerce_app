<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BlankFragment">

    <!-- Header: All Categories -->
    <TextView
        android:id="@+id/tvAllCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="All Categories"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Popular Stores Section -->
    <TextView
        android:id="@+id/tvPopularStores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Popular Store"
        android:textSize="16sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Add ImageView for each store icon in Popular Stores -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/tshirt1" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/tshirtswomen2" />
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/tshirtswomen2" />
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/tshirtswomen2" />
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/tshirtswomen2" />
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/tshirtswomen2" />
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/tshirtswomen2" />
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/tshirtswomen2" />
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/tshirtswomen2" />
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/tshirtswomen2" />

            <!-- Repeat for additional stores... -->

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Recently Viewed Stores Section -->
    <TextView
        android:id="@+id/tvRecentlyViewedStores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Recently Viewed Stores"
        android:textSize="16sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Add ImageView for each recently viewed item -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/image1" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/image2" />
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/image1" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/image2" />
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/image1" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/image2" />
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/image1" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/image2" />
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/image1" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/image2" />

            <!-- Repeat for additional items... -->

        </LinearLayout>
    </HorizontalScrollView>

    <!-- More on Flipkart Section -->
    <TextView
        android:id="@+id/tvMoreOnFlipkart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="More on Flipkart"
        android:textSize="16sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:padding="8dp">

        <!-- Add ImageView and TextView for each category in More on Flipkart -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/image4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flipkart Green" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/image4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flipkart Green" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/image4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flipkart Green" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/image4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flipkart Green" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/image4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flipkart Green" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/image4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flipkart Green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ecommercelogo" />
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ecommercelogo" />
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ecommercelogo" />
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ecommercelogo" />
            <ImageView
                android:layout_width="64dp"
